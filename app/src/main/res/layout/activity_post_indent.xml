<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pump Name"
                android:textColor="#3336FF"
                android:textSize="17sp"/>

            <Spinner
                android:id="@+id/spinnerPumpName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:entries="@array/pump_name"
                android:background="@drawable/edit_text_border"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Vehicle No."
                android:textColor="#3336FF"
                android:textSize="17sp"/>

            <Spinner
                android:id="@+id/spinnerVehicleNo"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:entries="@array/vehicle_no"
                android:background="@drawable/edit_text_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#3336FF"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/editTextQuantity"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="number"
                android:background="@drawable/edit_text_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/checkBoxTankFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Full Tank"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#3336FF"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="number"
                android:background="@drawable/edit_text_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Driver Cash"
                android:textColor="#3336FF"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/editTextDriverCash"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="number"
                android:background="@drawable/edit_text_border"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Submit"/>

    </LinearLayout>

</RelativeLayout>