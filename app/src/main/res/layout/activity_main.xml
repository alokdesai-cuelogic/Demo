<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonPostIndent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Post Indent"/>

        <Button
            android:id="@+id/buttonMyBalance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Know My Balance"/>

        <Button
            android:id="@+id/buttonMyInvoice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="My Invoice"/>

        <Button
            android:id="@+id/buttonMyLedger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="My Ledger"/>

        <Button
            android:id="@+id/buttonLastIndent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Last Indent"/>

    </LinearLayout>

</RelativeLayout>
